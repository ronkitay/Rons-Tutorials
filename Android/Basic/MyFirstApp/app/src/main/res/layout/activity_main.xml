<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/mainText"
            android:layout_width="282dp"
            android:layout_height="263dp"
            android:text="שלום מאיה - הנה צומי!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.5" android:textStyle="bold"/>
    <Button
            android:text="צומי"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="420dp"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/tzumiButton" android:textSize="30sp"
            android:textStyle="bold" android:clickable="true" android:onClick="onTzumiClick"/>

</android.support.constraint.ConstraintLayout>